generator client {
  provider      = "prisma-client-js"
  output        = "../lib/generated/prisma"
  binaryTargets = ["native", "windows", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model CollegeCutoff {
  id          Int               @id @default(autoincrement())
  collegeCode Int
  collegeName String
  status      String?
  location    String?
  branch      String
  category    String
  gender      String
  cutoff      Float
  createdAt   DateTime          @default(now())
  bookmarks   BookmarkCollege[]
}

model User {
  id        Int               @id @default(autoincrement())
  name      String
  username  String            @unique
  password  String
  role      Role              @default(USER)
  profile   Profile?
  bookmarks BookmarkCollege[]
}

model Profile {
  id                 Int      @id @default(autoincrement())
  firstname          String
  lastname           String
  email              String?
  mobile             Int
  percentile         Float
  interestedBranches String[]
  interestedCities   String[]
  userId             Int      @unique
  user               User     @relation(fields: [userId], references: [id])
}

model BookmarkCollege {
  id        Int           @id @default(autoincrement())
  userId    Int
  collegeId Int
  user      User          @relation(fields: [userId], references: [id])
  college   CollegeCutoff @relation(fields: [collegeId], references: [id])
}
